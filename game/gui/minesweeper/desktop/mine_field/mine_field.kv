<MineField>:
    mine_field: mine_field

    viewclass: 'CellButton'
    effect_cls: ScrollEffect
    size_hint: None, None
    size: min(mine_field.width, self.parent_layout.width), min(mine_field.height, self.parent_layout.height)
    do_scroll: (mine_field.width > self.parent_layout.width), (mine_field.height > self.parent_layout.height)
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    RecycleGridLayout:
        id: mine_field
        default_size_hint: None, None
        default_size: '25dp', '25dp'
        size_hint: None, None
        size: self.minimum_width, self.minimum_height
