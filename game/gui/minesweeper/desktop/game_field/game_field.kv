<GameField>:
    mine_field: mine_field

    GridLayout:
        id: mine_field

        canvas.before:
            Color:
                rgba: 0.52, 0.52, 0.52, 1
            Line:
                width: dp(2)
                points: self.x, self.y, self.width, self.height

        size_hint: None, None
        size: self.minimum_size
