<StatusButton>:
    canvas.before:
        Color:
            rgba: 1, 1, 0.34, 1
        RoundedRectangle:
            size: 0.6 * self.width, 0.6 * self.height
            pos: self.x + 0.2 * self.width, self.y + 0.2 * self.height
            radius: [max(self.size) * 0.3]
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: dp(1)
            ellipse: self.x + 0.2 * self.width, self.y + 0.2 * self.height, 0.6 * self.width, 0.6 * self.height
        Line:
            group: 'left_eye'
            width: dp(1)
            circle: self.x + 0.42 * self.width, self.y + 0.57 * self.height, dp(1)
        Line:
            group: 'right_eye'
            width: dp(1)
            circle: self.x + 0.58 * self.width, self.y + 0.57 * self.height, dp(1)
        Line:
            group: 'mouth'
            width: dp(1)
            ellipse:
                self.x + 0.25 * self.width, self.y + 0.35 * self.height, 0.5 * self.width, 0.6 * self.height, 135, 225

    size_hint: None, None
    size: '50dp', '50dp'
